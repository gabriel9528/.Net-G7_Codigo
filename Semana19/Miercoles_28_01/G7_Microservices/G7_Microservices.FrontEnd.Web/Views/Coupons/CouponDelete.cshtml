@using G7_Microservices.FrontEnd.Web.Models.Dto
@using G7_Microservices.FrontEnd.Web.Models.Dto.Coupon

@model CouponDto

<form asp-action="CouponDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-dark text-center">Eliminar Cupon</h1>
        <input asp-for="Id" hidden />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Codigo de cupon</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Code" disabled class="form-control" disabled />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Descuento</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DiscountAmount" disabled class="form-control" readonly />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Cantidad minima</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="MinimunAmount" disabled class="form-control" readonly />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="CouponIndex" class="btn-primary btn form-control ">Regresar</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>