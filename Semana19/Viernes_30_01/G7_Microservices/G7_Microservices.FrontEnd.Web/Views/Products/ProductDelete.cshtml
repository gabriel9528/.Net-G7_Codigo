@using G7_Microservices.FrontEnd.Web.Models.Dto.Product

@model ProductDto

<form asp-action="ProductDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-dark text-center">Eliminar Producto</h1>
        <input hidden asp-for="Id" />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Nombre</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" readonly />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Categoria</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryName" disabled class="form-control" disbaled />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Descripcion</label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Description" disabled class="form-control" rows="5" readonly></textarea>
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Precio</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" disabled class="form-control" readonly />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Imagen</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImageUrl" disabled class="form-control" readonly />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="ProductIndex" class="btn-success btn form-control ">Retornar</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Eliminar Producto" class="btn btn-danger form-control" />
            </div>

        </div>

        <div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}