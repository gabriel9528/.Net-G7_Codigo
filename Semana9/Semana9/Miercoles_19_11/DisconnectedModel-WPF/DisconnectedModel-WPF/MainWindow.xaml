<Window x:Class="DisconnectedModel_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DisconnectedModel_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Users">
                <Grid Background="Aqua">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*" />
                        <ColumnDefinition Width="15*" />
                        <ColumnDefinition Width="40.861" />
                        <ColumnDefinition Width="13.418"/>
                        <ColumnDefinition Width="715.721"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock HorizontalAlignment="Left" Margin="25,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" 
                               Height="20" Width="100" Grid.Column="2" Grid.ColumnSpan="3">Users</TextBlock>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="8,25,20,20" Grid.Column="1" Grid.ColumnSpan="4">
                        <StackPanel Margin="25,25,0,0">
                            <StackPanel Orientation="Horizontal">
                                <ComboBox Width="200" x:Name="comboBoxUsers" SelectionChanged="comboBoxUsers_SelectionChanged" />
                                <Button x:Name="btnAddUser" Content="Add User" RenderTransformOrigin="0.5,0.5" Click="btnAddUser_Click" />
                                <Button x:Name="btnUpdateUser" Content="Update User" />
                                <Button x:Name="btnDeleteUser" Content="Delete User" Click="btnDeleteUser_Click" />
                            </StackPanel>
                            <TextBlock Text="Name" />
                            <TextBox x:Name="txtName" HorizontalAlignment="Stretch" />
                            <TextBlock Text="Email" />
                            <TextBox x:Name="txtEmail" HorizontalAlignment="Stretch" />
                            <TextBlock Text="Address" />
                            <TextBox x:Name="txtAddress" HorizontalAlignment="Stretch" />
                            <TextBlock Text="Age" />
                            <TextBox x:Name="txtAge" HorizontalAlignment="Stretch" />
                            <TextBlock Text="Next Flight" />
                            <ComboBox x:Name="comboBoxNextFlight" Width="200"/>
                            <DataGrid Name="dataGridUsers" Height="150" />
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Flights" RenderTransformOrigin="0.5,0.5">
                <Grid Background="Aqua">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*" />
                        <ColumnDefinition Width="15*" />
                        <ColumnDefinition Width="770" />
                    </Grid.ColumnDefinitions>
                    <TextBlock HorizontalAlignment="Left" Margin="25,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" 
                               Height="20" Width="100" Grid.Column="2">Flights</TextBlock>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="8,25,20,20" Grid.Column="1" Grid.ColumnSpan="3">
                        <StackPanel Margin="25,25,0,0">
                            <StackPanel Orientation="Horizontal">
                                <ComboBox Width="200" x:Name="comboBoxFlights" SelectionChanged="comboBoxFlights_SelectionChanged" />
                                <Button x:Name="btnAddFlight" Content="Add Flight" Click="btnAddFlight_Click" />
                                <Button x:Name="btnUpdateFlight" Content="Update Flight" Click="btnUpdateFlight_Click" />
                                <Button x:Name="btnDeleteFlight" Content="Delete Flight" Click="btnDeleteFlight_Click" />
                            </StackPanel>
                            <TextBlock Text="Airline" />
                            <TextBox x:Name="txtAirline" HorizontalAlignment="Stretch" />
                            <TextBlock Text="Flight Number" />
                            <TextBox x:Name="txtFlightNumber" HorizontalAlignment="Stretch" />
                            <TextBlock Text="Destination" />
                            <TextBox x:Name="txtDestination" HorizontalAlignment="Stretch" />
                            <TextBlock Text="AirPlane Type" />
                            <ComboBox x:Name="comboBoxAirPlaneType" Width="200"/>
                            <DataGrid Name="dataGridFlights" Height="150" />
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
