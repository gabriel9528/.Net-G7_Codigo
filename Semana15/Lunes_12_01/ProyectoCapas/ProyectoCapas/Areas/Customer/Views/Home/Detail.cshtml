@model ProyectoCapas.Models.Article

@{
    ViewData["Title"] = "Detalle del Articulo";

    DateTime? fecha = DateTime.Parse(Model.CreatedDate);
    string fechaFormateada = fecha.Value.ToString("dd/MM/yyyy");
}

<br />
<div class="container">
    <div class="card">
        <div class="card-header bg-light text-light">
            <div class="col-12">
                <h1 class="text-primary text-center">@Model.Name</h1>
            </div>
            <div class="col-12">
                <p class="text-muted">Fecha: @fechaFormateada</p>
            </div>
        </div>
        <div class="card-body">
            <div class="col-12">
                <img src="@Model.UrlImage" class="img-thumbnail mx-auto d-block" />
                <p class="text-secondary">@Html.Raw(Model.Description)</p>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" class="btn btn-success btn-sm">Regresar</a>
                </div>
            </div>
        </div>
    </div>
</div>