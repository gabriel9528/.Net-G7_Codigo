@using G7_Microservices.FrontEnd.Web.Models.Dto
@using G7_Microservices.FrontEnd.Web.Models.Dto.Coupon

@model CouponRequestDto

<form asp-action="CouponCreate">
    <br />
    <div class="container border p-3">
        <h1 class="text-dark text-center">Crear nuevo Cupon</h1>

        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;"> Codigo de cupon</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Descuento</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DiscountAmount" class="form-control" />
                <span asp-validation-for="DiscountAmount" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Cantidad Minima</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="MinimunAmount" class="form-control" />
                <span asp-validation-for="MinimunAmount" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="CouponIndex" class="btn-primary btn form-control ">Regresar</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}